<p id="notice"><%= notice %></p>
<%= link_to 'ホーム', root_path, method: :get %>
<% if user_signed_in? %>
<%= link_to current_user.email, users_show_path %>
<%= link_to "ログアウト", destroy_user_session_path, method:"delete" %>
<% else %>
<%= link_to "ログイン", new_user_session_path, method:"get" %>
<%= link_to "ユーザー登録", new_user_registration_path, method:"get" %>
<% end %>
<hr>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Number of pages:</strong>
  <%= @book.number_of_pages %>
</p>

<%= link_to 'Edit', edit_book_path(@book), method: :get %> |
<%= link_to 'Back', books_path, method: :get %>
<p>
    <% if @book.image.attached? %>
      <%= image_tag @book.image %>
    <% end %>
</p>